@model ArchivoUH.Models.RegisterViewModel

<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="shortcut icon" type="image/x-icon" href=@Url.Content("~/Images/icon.ico") />
    <title>Registrar Usuario</title>

    <!-- Custom fonts for this template-->
    <link href="~/sbAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/sbAdmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="row">
            <div>
                <a class="btn btn-secondary" href="@Url.Action("Index","Home")">
                    <i class="fas fa-home"></i>
                </a>
            </div>
            <div>
                <a class="btn btn-secondary" href="@Url.Action("Index","Users")">
                    <i class="fas fa-users"></i>
                </a>
            </div>
        </div>

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-login-image"><img src="~/Images/logo3-2.jpg" /></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Registrar un nuevo usuario</h1>
                                <h4 class="h5 text-gray-900 mb-4">Los campos con (*) son obligatorios</h4>
                            </div>

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "user" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(m => m.FirstName, new
                                        {
                                            type = "text",
                                            @class = "form-control form-control-user",
                                            id = "exampleFirstName",
                                            placeholder = "Nombre(s)*"
                                        })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.LastName, new
                                        {
                                            type = "text",
                                            @class = "form-control form-control-user",
                                            id = "exampleLastName",
                                            placeholder = "Apellidos*"
                                        })
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.TextBoxFor(m => m.UserName, new
                                        {
                                            type = "text",
                                            @class = "form-control form-control-user",
                                            id = "exampleUserName",
                                            placeholder = "Usuario*"
                                        })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(m => m.Email, new
                                        {
                                        type = "email",
                                        @class = "form-control form-control-user",
                                        id = "exampleInputEmail",
                                        placeholder = "Correo Electrónico*"
                                        })
                                    </div>

                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        @Html.PasswordFor(m => m.Password, new
                                        {
                                            type = "password",
                                            @class = "form-control form-control-user",
                                            id = "exampleInputPassword",
                                            placeholder = "Contraseña*"
                                        })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.PasswordFor(m => m.ConfirmPassword, new
                                        {
                                            type = "password",
                                            @class = "form-control form-control-user",
                                            id = "exampleRepeatPassword",
                                            placeholder = "Confirmar Contraseña*"
                                        })
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Registrar" />

                                <hr>

                                @Html.ValidationSummary("", new { @class = "text-danger" })
                            }

                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/sbAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/sbAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/sbAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/sbAdmin/js/sb-admin-2.min.js"></script>

</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}