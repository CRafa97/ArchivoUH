@model ArchivoUH.Models.UserViewModel

<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Editar</title>

    <!-- Custom fonts for this template-->
    <link href="~/sbAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/sbAdmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <!-- Render the Sidebar like partial view-->
        @{
            Html.RenderPartial("_Sidebar");
        }

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <!-- Render the Topbar like partial view in page content -->
                @{
                    Html.RenderPartial("_Topbar");
                }


                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Add Elements Here... -->
                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Usuario @Model.UserName</h1>

                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Edición de Usuario</h6>
                    </div>
                    <div class="card-body">
                        <div class="border-left-warning">
                            <div class="card-body">
                                Los campos con (*) deben contener un valor válido para poder realizar las modificaciones
                                deseadas, para cambiar la contraseña de un usuario solamente debe de escribirla en el
                                campo "Cambiar Contraseña", esta acción no modificará otro campo del formulario
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("Edit", "Users"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)
                                
                                <!-- Collapsable Card Example -->
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Accordion -->
                                    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                                        <h6 class="m-0 font-weight-bold text-primary">Datos del Usuario</h6>
                                    </a>
                                    <!-- Card Content - Collapse -->
                                    <div class="collapse show" id="collapseCardExample">
                                        <div class="card-body ">
                                            <div class="border-left-success">
                                                <div class="card-body">
                                                    Los campos siguientes se relacionan con la información del usuario
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <label class="col-md-3">Nombre de Usuario</label>
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger col-md-3" } )
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <label class="col-md-3">Nombre(s)</label>
                                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger col-md-3" })
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <label class="col-md-3">Apellidos</label>
                                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger col-md-3" })
                                            </div>
                                            <br />
                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <label class="col-md-3">Correo Eletrónico</label>
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-md-3" })
                                            </div>

                                            <br />

                                            <a class="btn btn-success btn-icon-split">
                                                <input type="submit" value="Editar Usuario" class="btn btn-success" />
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-pen-alt"></i>
                                                </span>
                                            </a>

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ChangePassword", "Users"))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)

                                <!-- Collapsable Card Example -->
                                <div class="card shadow mb-4">
                                    <!-- Card Header - Accordion -->
                                    <a href="#collapseCardExample1" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample1">
                                        <h6 class="m-0 font-weight-bold text-primary">Contraseña</h6>
                                    </a>
                                    <!-- Card Content - Collapse -->
                                    <div class="collapse show" id="collapseCardExample1">
                                        <div class="card-body ">
                                            <div class="border-left-success">
                                                <div class="card-body">
                                                    La nueva contraseña debe cumplir con las restricciones establecidas
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-1"></div>
                                                <label class="col-md-3">Cambiar Contraseña</label>
                                                @Html.PasswordFor(model => model.Password, new { @class = "form-control col-md-5" })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger col-md-3" })
                                            </div>

                                            <br />

                                            <a class="btn btn-success btn-icon-split">
                                                <input type="submit" value="Cambiar Contraseña" class="btn btn-success" />
                                                <span class="icon text-white-50">
                                                    <i class="fas fa-bell"></i>
                                                </span>
                                            </a>
                                        </div>

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <!-- Rendering Page Footer like partial view -->
            @{
                Html.RenderPartial("_Footer");
            }

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal -->
    <!-- Render Logout Modal for all view -->
    @{
        Html.RenderPartial("_LogoutModal");
    }

    <!-- Bootstrap core JavaScript-->
    <script src="~/sbAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/sbAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/sbAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/sbAdmin/js/sb-admin-2.min.js"></script>

</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
