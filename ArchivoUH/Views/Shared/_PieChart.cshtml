@model ArchivoUH.Models.PieChart

<script type="text/javascript">
    // Set new default font family and font color to mimic Bootstrap's default styling
    Chart.defaults.global.defaultFontFamily = 'Nunito', '-apple-system,system-ui,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif';
    Chart.defaults.global.defaultFontColor = '#858796';

    // Pie Chart Example
    var ctx = document.getElementById("@Model.CanvasName"); //canvas name
    var myPieChart = new Chart(ctx, {
        type: 'doughnut', //type
        data: {
            labels: [@Html.Raw(String.Join(",", Model.Labels))], //labels
            datasets: [{
                data: [@String.Join(",", Model.Data)], //data
                backgroundColor: [@Html.Raw(String.Join(",", Model.BkColor.Select(x=>$"\'{x}\'")))], //bkcolors
                hoverBackgroundColor: [@Html.Raw(String.Join(",", Model.HoverBkColor.Select(x=>$"\'{x}\'")))], //hbkcolors
                hoverBorderColor: "rgba(234, 236, 244, 1)",
            }],
        },
        options: {
            maintainAspectRatio: false,
            tooltips: {
                backgroundColor: "rgb(255,255,255)",
                bodyFontColor: "#858796",
                borderColor: '#dddfeb',
                borderWidth: 1,
                xPadding: 15,
                yPadding: 15,
                displayColors: false,
                caretPadding: 10,
            },
            legend: {
                display: @Model.Legend.ToString().ToLower() //legent
            },
            cutoutPercentage: 80,
        },
    });
</script>
